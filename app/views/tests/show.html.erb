			<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'%>
		</div>
		<div class="col-md-4">
		<div class="row">
			
			<div class="col-md-4">
			</div>
			<div class="col-md-8" style="text-align: left;">
				<%@answers.each do |p|%>
					<%=check_box_tag 'answer_ids[]', p.id %>
					<%= sanitize p.version %>
					<br/>
				<%end%>
			</div>
		</div>
		</div>

		<div class="col-md-4">
			<%= f.submit "Відповісти",  class:"btn btn-danger" %>
		</div>
	</div>
	<% @i+=10 %>
	<%end%>	
