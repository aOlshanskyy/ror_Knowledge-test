<%=form_for @test, url:check_path(@test.id), method: :post do |f|%>
	<div class="progress">
  		<div class="progress-bar" role="progressbar" style="width: <%= @i %>%;" aria-valuenow="	85" aria-valuemin="0" aria-valuemax="100"><%= @i %>% 
  		</div>
	</div><br/>
	<div class="row">
	<div class="col-md-2">
	</div>
	<div class="col-md-1">
		<h3 style="text-align: right;"><%=f.label @test.id%>)</h3> 
	</div>
		<div class="col-md-6" >
				<div align="left" style="text-align: justify;">
					<h3>  <%= sanitize @test.title%></h3>
				</div>
		<small>
			<time><%= f.label @test.created_at.to_date.strftime("%d %B, %Y") %></time>
		</small>
		</div>
	<div class="col-md-3">
	</div>
	</div>	
	<div class="row" style="text-align: center;">
