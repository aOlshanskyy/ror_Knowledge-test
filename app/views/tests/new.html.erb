<%= form_for @test do |f| %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_area :title, class: 'form-control', :rows => 5, :cols => 100 %>
</div>



<div class="form-group">
<%= f.submit 'Зберегти', class: "btn btn-primary active btn-lg" %>
<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'%>
</div>
<%end%>